# Local development environment example
# Copy this to .env.local and configure with your values

APP_NAME=Laravel
APP_ENV=local
APP_KEY=base64:your_app_key_here
APP_DEBUG=true
APP_URL=http://localhost

# Database (local)
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=dmseller_local
DB_USERNAME=laravel
DB_PASSWORD=laravel

# Google OAuth (get your own keys)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost/api/auth/google/callback

# Frontend
FRONTEND_URL=http://localhost:3000

# OAuth2
ACCESS_TOKEN_EXPIRATION=60
REFRESH_TOKEN_EXPIRATION=365

# Passport
PASSPORT_CLIENT_ID=1
PASSPORT_CLIENT_SECRET=your_passport_client_secret
